@model GraniteHouse.Models.Products
@using GraniteHouse.Extensions

<h2 class="text-info">Details Product</h2>


<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Price"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="Price" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="@Model.ProductTypes.Name" class="form-control" />
            </div>
        </div>
        @if (Model.SpecialTags.Name != "--None--")
        {
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTags"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="@Model.SpecialTags.Name" class="form-control" />
                </div>
            </div>
        }
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ShadeColor"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="ShadeColor" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
            </div>
            <div class="col-8">
                <button type="submit" value="Add to Bag" asp-rou-id="@Model.ID" class="btn btn-primary form-control">Add To Bag</button>
            </div>
        </div>

    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
        <img src="@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        <br /><br />
        @if (Model.Available)
        {
            <img src="~/images/instocknew.jpeg" width="50%"/>
        }
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Index" class="btn btn-success">Back To List</a>
    </div>
</div>


